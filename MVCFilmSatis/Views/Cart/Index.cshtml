@using MVCFilmSatis.Models
@model List<Movie>

<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary btn-sm btn-block" onclick="@("window.location.href='"+ @Url.Action("Index","Home") +"'");">
                                    <span class="glyphicon glyphicon-share-alt"></span> Continue shopping
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @if (Model != null)
                    {
                        foreach (Movie item in Model)
                        {
                            <div class="row">
                                <div class="col-xs-2">
                                    <img class="img-responsive" src="~/Uploads/Movies/@Html.Raw(item.MovieId + ".jpg")">
                                </div>
                                <div class="col-xs-4">
                                    <h4 class="product-name"><strong>@item.Name</strong></h4><h4><small>@item.Description</small></h4>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-6 text-right">
                                        <h6><strong>@item.Price.ToString("C") <span class="text-muted">x</span></strong></h6>
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="text" class="form-control input-sm" value="1" disabled>
                                    </div>
                                    <div class="col-xs-2">
                                        <button type="button" onclick="location.href='/Cart/Delete/@item.MovieId'" class="btn btn-link btn-xs">
                                            <!-- Cart controller actionresult Delete gönderdik-->
                                            <span class="glyphicon glyphicon-trash"> </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        }
                    }


                    <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-xs-9">
                                <h4 class="text-right">
                                    Total
                                    <strong>@ViewBag.Total</strong>
                                </h4>
                            </div>
                            <div class="col-xs-3">
                                <a href="/Cart/Checkout" class="btn btn-success btn-block">
                                    Checkout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>